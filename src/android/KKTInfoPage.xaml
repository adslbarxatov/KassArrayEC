<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RD_AAOW.KKTInfoPage">

	<ScrollView>
		<StackLayout>

			<Label />

			<Label x:Name="InfoLabel" HorizontalOptions="Fill" />

			<BoxView VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="1" 
					WidthRequest="100" Color="#505050" Margin="10" />

			<StackLayout Orientation="Horizontal" HorizontalOptions="Center">
				<Button x:Name="UpdateButton" VerticalOptions="Center" />
				<Button x:Name="RemoveButton" VerticalOptions="Center" />
			</StackLayout>

			<Label />

			<Button x:Name="AddToSameOwnerButton" HorizontalOptions="Center" />
			<Button x:Name="UpdateContactsButton" HorizontalOptions="Center" />
			
			<Label />
			
			<Button x:Name="FindNextButton" HorizontalOptions="Center" />

			<Label />

		</StackLayout>
	</ScrollView>
</ContentPage>
